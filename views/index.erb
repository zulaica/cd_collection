<section>
  <% if @collection == [] %>
  <p>Your collection is empty. Want to add a CD?</p>
  <% else %>
  <dl>
    <% @collection.each() do |cd_case| %>
    <dt><a href="/Artist"><%= cd_case.artist() %></a></dt>
    <dd><%= cd_case.album() %></dd>
    <dd><%= cd_case.year() %></dd>
    <% end %>
  </dl>
  <% end %>
</section>
